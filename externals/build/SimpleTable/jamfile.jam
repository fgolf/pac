# jamfile for Ian's Simple Table 

lib SimpleTable
  : # sources
    $(SIMPLETABLE_PATH)/CNumBase.cpp
    $(SIMPLETABLE_PATH)/CTable.cpp
    [
      rootcint Dict
        : # sources
          $(SIMPLETABLE_PATH)/CTable.h
          $(SIMPLETABLE_PATH)/CNumBase.h
        : # requriements
          <include>$(SIMPLETABLE_PATH)
          <linkdef>$(SIMPLETABLE_PATH)/LinkDef.h
    ]
    # dependent packages
    /ROOT
  : # requirements 
    <include>$(SIMPLETABLE_PATH)
  : # default-build
  : # usage-requirements
    <include>$(SIMPLETABLE_PATH)
  ;

exe test_ctable
  : # sources
    $(SIMPLETABLE_PATH)/test.cpp
    SimpleTable/<link>static
    # dependent packages
    /ROOT
  : # requirements 
  : # default-build
  : # usage-requirements
  ;

default-install SimpleTable : <link>shared ;
default-install test_ctable ;
