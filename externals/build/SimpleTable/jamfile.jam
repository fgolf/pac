# jamfile for Ian's Simple Table 

lib SimpleTable
  : # sources
    $(SIMPLETABLE_PATH)/CNumBase.cpp
    $(SIMPLETABLE_PATH)/CTable.cpp
    [ rootcint Dict
        : # requirements
          <include>$(SIMPLETABLE_PATH)
          <header>CTable.h
          <header>CNumBase.h
          <linkdef>LinkDef.h
    ]
    # dependent packages
    /ROOT
  : # requirements 
    <include>$(SIMPLETABLE_PATH)
  : # default-build
  : # usage-requirements
    <include>$(SIMPLETABLE_PATH)
  ;

exe test_ctable
  : # sources
    $(SIMPLETABLE_PATH)/test.cpp
    SimpleTable/<link>static
    # dependent packages
    /ROOT
  : # requirements 
  : # default-build
  : # usage-requirements
  ;

default-install SimpleTable/<link>shared ;
default-install test_ctable ;
